<Page x:Class="InstagramProfile.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:InstagramProfile.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
<ScrollViewer>
        <StackPanel Spacing="20" Padding="24">

<!-- Top Row: Profile Image + Stats -->
            <StackPanel Spacing="40" Orientation="Horizontal" >

                <!-- Profile Image -->
                <Ellipse Width="90" Height="90">
                    <Ellipse.Stroke>
                        <SolidColorBrush Color="{ThemeResource AccentColor}" Opacity="0.9" />
                    </Ellipse.Stroke>
                    <Ellipse.StrokeThickness>2.5</Ellipse.StrokeThickness>
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="ms-appx:///Resources/Images/profile.png"/>
                    </Ellipse.Fill>
                </Ellipse>

                <!-- Stats -->
                <StackPanel Orientation="Horizontal" Spacing="28" VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="12"
                                   FontWeight="Bold"
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorPrimary}"/>
                        <TextBlock Text="Posts"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondary}"/>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="105K"
                                   FontWeight="Bold"
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorPrimary}"/>
                        <TextBlock Text="Followers"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondary}"/>
                    </StackPanel>

                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="7"
                                   FontWeight="Bold"
                                   FontSize="28"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorPrimary}"/>
                        <TextBlock Text="Following"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   Foreground="{ThemeResource TextFillColorSecondary}"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>

<StackPanel Orientation="Vertical" Spacing="7" Margin="20,10,0,0">
            <!-- Username -->
            <TextBlock Text="Uno Platform"
                       FontSize="26"
                       FontWeight="Bold"
                       Foreground="{ThemeResource TextFillColorPrimary}"/>

            <!-- Bio -->
            <TextBlock Text="Build Cross-Platform .NET Apps Visually And With AI"
                       FontSize="15"
                       TextWrapping="Wrap"
                       Foreground="{ThemeResource TextFillColorSecondary}"/>

            <!-- Link -->
            <TextBlock Text="uno.platform.dev"
                       FontSize="15"
                       Foreground="#F85977"
                       Margin="0,4,0,0"/>
</StackPanel>

<!-- Buttons -->
<StackPanel Orientation="Horizontal" Spacing="12" Margin="20,10,0,0">
    <Button CornerRadius="10" Content="Edit Profile" MinWidth="170" />
    <Button CornerRadius="10" Content="View Archive" MinWidth="170" />
</StackPanel>

            <!-- Stories -->
            <ScrollViewer HorizontalScrollBarVisibility="Hidden" Margin="20,16,0,0">
                <StackPanel Spacing="22" Orientation="Horizontal" >
                    <!-- Story Template -->
<StackPanel>
    <Grid Width="77" Height="77">
        <Ellipse Stroke="Gray" StrokeThickness="2"/>

        <Ellipse Width="66" Height="66" Margin="4">
            <Ellipse.Fill>
                <ImageBrush ImageSource="ms-appx:///Resources/Images/story.png"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>

    <TextBlock Text="Frontend Dev"
               HorizontalAlignment="Center"
               FontSize="12"
               Margin="0,12,0,0"
               Foreground="{ThemeResource TextFillColorPrimary}"/>
</StackPanel>

<StackPanel>
    <Grid Width="77" Height="77">
        <Ellipse Stroke="Gray" StrokeThickness="2"/>

        <Ellipse Width="66" Height="66" Margin="4">
            <Ellipse.Fill>
                <ImageBrush ImageSource="ms-appx:///Resources/Images/story1.png"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>

    <TextBlock Text="Uno UI"
               HorizontalAlignment="Center"
               FontSize="12"
               Margin="0,12,0,0"
               Foreground="{ThemeResource TextFillColorPrimary}"/>
</StackPanel>

<StackPanel>
    <Grid Width="77" Height="77">
        <Ellipse Stroke="Gray" StrokeThickness="2"/>

        <Ellipse Width="66" Height="66" Margin="4">
            <Ellipse.Fill>
                <ImageBrush ImageSource="ms-appx:///Resources/Images/story2.png"/>
            </Ellipse.Fill>
        </Ellipse>
    </Grid>

    <TextBlock Text="Trophy"
               HorizontalAlignment="Center"
               FontSize="12"
               Margin="0,12,0,0"
               Foreground="{ThemeResource TextFillColorPrimary}"/>
</StackPanel>
                </StackPanel>
            </ScrollViewer>

<StackPanel Orientation="Vertical" Spacing="5" Margin="0,10,0,0">
                        <!-- Tabs -->
<Grid Margin="0,10,0,0">
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <!-- Posts -->
    <FontIcon Grid.Column="0"
              Glyph="&#xE91B;"
              FontFamily="Segoe Fluent Icons"
              Foreground="{ThemeResource AccentTextFillColorPrimary}"
              HorizontalAlignment="Center"/>

    <!-- Reels -->
    <FontIcon Grid.Column="1"
              Glyph="&#xF5B0;"
              FontFamily="Segoe Fluent Icons"
              Foreground="{ThemeResource TextFillColorSecondary}"
              HorizontalAlignment="Center"/>

    <!-- Tagged -->
    <FontIcon Grid.Column="2"
              Glyph="&#xE77B;"
              FontFamily="Segoe Fluent Icons"
              Foreground="{ThemeResource TextFillColorSecondary}"
              HorizontalAlignment="Center"/>
</Grid>

<!-- Posts Grid -->
<Grid Margin="0,12,0,0"
      ColumnSpacing="4"
      RowSpacing="4">

    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Row 1 -->
    <Image Grid.Row="0" Grid.Column="0"
           Source="ms-appx:///Resources/Images/post1.png"
           Stretch="UniformToFill"/>

    <Image Grid.Row="0" Grid.Column="1"
           Source="ms-appx:///Resources/Images/post2.png"
           Stretch="UniformToFill"/>

    <Image Grid.Row="0" Grid.Column="2"
           Source="ms-appx:///Resources/Images/post3.png"
           Stretch="UniformToFill"/>

    <!-- Row 2 -->
    <Image Grid.Row="1" Grid.Column="0"
           Source="ms-appx:///Resources/Images/post4.png"
           Stretch="UniformToFill"/>

    <Image Grid.Row="1" Grid.Column="1"
           Source="ms-appx:///Resources/Images/post5.png"
           Stretch="UniformToFill"/>

    <Image Grid.Row="1" Grid.Column="2"
           Source="ms-appx:///Resources/Images/post6.png"
           Stretch="UniformToFill"/>

</Grid>
</StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
